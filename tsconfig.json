{
	"extends": ["@tsconfig/strictest/tsconfig"],
	"include": [
		"./src/*",
		"./tasks/*"
	],
	"exclude": ["./node_modules"],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./dist/",
		"rootDir": "./src/",
		"noUncheckedIndexedAccess": true,
		"checkJs": false,
	}
}